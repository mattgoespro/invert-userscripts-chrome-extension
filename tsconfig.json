{
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "tools/**/*.ts",
    "*.ts",
    "webpack.config.ts",
    "tools/webpack-extension-reloader.model.ts",
    "tools/webpack-extension-reloader.ts"
  ],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020", "dom", "dom.iterable"],
    "jsx": "react",
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
