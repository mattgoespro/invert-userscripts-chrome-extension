{
  "extends": "../../tsconfig.base.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "lib": ["es2020", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "types": ["chrome", "react", "react-dom"],
    "outDir": "dist/packages/renderer",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"],
      "@assets/styles/invert-ide": ["./src/assets/styles/_index.scss"]
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ]
}
