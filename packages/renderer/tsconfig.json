{
  "extends": "../../tsconfig.base.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "lib": ["es2020", "dom", "dom.iterable", "es2023.array"],
    "jsx": "react-jsx",
    "types": ["chrome", "react", "react-dom"],
    "outDir": "dist/packages/renderer",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ]
}
