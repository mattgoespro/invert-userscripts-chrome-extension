{
  "name": "chrome-invert-ide-userscripts-extension",
  "displayName": "Invert IDE Userscripts",
  "version": "1.0.0",
  "description": "Flip the web upside down with Invert IDE, a Chrome extension that combines an integrated TypeScript/SCSS IDE and bundler for the browser, to manage, build, and inject JavaScript userscripts fast.",
  "author": "mattgoespro",
  "main": "index.js",
  "type": "module",
  "keywords": [
    "chrome",
    "extension",
    "userscripts",
    "typescript",
    "ide",
    "scss",
    "bundler",
    "developer tools"
  ],
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "start-redux-devtools": "redux-devtools --hostname=localhost --port=8001 --open",
    "clean": "rm -rf dist",
    "icons": "tsx scripts/create-icons.ts",
    "lint": "eslint packages tools",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@redux-devtools/core": "^4.1.1",
    "@redux-devtools/dock-monitor": "^4.1.1",
    "@redux-devtools/inspector-monitor": "^6.1.2",
    "@reduxjs/toolkit": "^2.11.2",
    "@tanstack/react-query": "^5.90.16",
    "@types/redux-logger": "^3.0.13",
    "lucide-react": "^0.554.0",
    "monaco-editor": "^0.55.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0",
    "react-redux": "^9.2.0",
    "redux-logger": "^3.0.6",
    "redux-observable": "^3.0.0-rc.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@html-eslint/eslint-plugin": "^0.50.0",
    "@types/chrome": "^0.1.31",
    "@types/chrome-remote-interface": "^0.33.0",
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "chrome-remote-interface": "^0.33.3",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "esbuild-loader": "^4.4.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "favicons": "^7.2.0",
    "favicons-webpack-plugin": "^6.0.1",
    "fs-extra": "^11.3.2",
    "html-webpack-plugin": "^5.6.5",
    "monaco-editor-webpack-plugin": "^7.1.1",
    "open": "^11.0.0",
    "prettier": "^3.7.1",
    "sass": "^1.94.2",
    "sass-loader": "^16.0.6",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "ws": "^8.18.3"
  }
}
